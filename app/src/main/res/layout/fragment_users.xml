<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:paddingBottom="80dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:background="@color/user_management_bg"
        android:paddingTop="18dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back Arrow"
                android:background="@android:color/transparent"
                android:layout_marginEnd="8dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Management"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginTop="0dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage students and teachers"
            android:textColor="@color/text_secondary"
            android:textSize="15sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_white"
        android:paddingTop="8dp"
        android:paddingBottom="0dp">
        <TextView
            android:id="@+id/tab_students"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Students"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:padding="12dp"
            android:background="@color/background_white"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tab_teachers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Teachers"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:padding="12dp"
            android:background="@color/background_white"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Search and Add Button Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Search..."
            android:background="@color/user_searchbar_bg"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint" />
        <Button
            android:id="@+id/btn_add_student"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:text="+ Add Student"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary"
            android:layout_marginStart="12dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Table Header for Students and Student List -->
    <HorizontalScrollView
        android:id="@+id/header_students"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/background_white">
            <TextView android:layout_width="60dp" android:layout_height="48dp" android:text="S_ID" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
            <TextView android:layout_width="90dp" android:layout_height="48dp" android:text="First Name" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
            <TextView android:layout_width="90dp" android:layout_height="48dp" android:text="Last Name" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
            <TextView android:layout_width="60dp" android:layout_height="48dp" android:text="Class" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
            <TextView android:layout_width="110dp" android:layout_height="48dp" android:text="Subjects" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
            <TextView android:layout_width="110dp" android:layout_height="48dp" android:text="Phone Number" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
            <TextView android:layout_width="110dp" android:layout_height="48dp" android:text="Guardian TP" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
            <TextView android:layout_width="120dp" android:layout_height="48dp" android:text="EMAIL" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
            <TextView android:layout_width="90dp" android:layout_height="48dp" android:text="Password" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
        </LinearLayout>
    </HorizontalScrollView>
    <!-- Student List with Horizontal Scroll -->
    <HorizontalScrollView
        android:id="@+id/scroll_students"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="horizontal"
        android:visibility="visible">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_students"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="80dp"
            android:clipToPadding="true" />
    </HorizontalScrollView>
    <!-- Table Header for Teachers -->
    <HorizontalScrollView
        android:id="@+id/header_teachers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:visibility="gone"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/background_white">
            <TextView android:layout_width="60dp" android:layout_height="48dp" android:text="T_ID" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
            <TextView android:layout_width="90dp" android:layout_height="48dp" android:text="First Name" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
            <TextView android:layout_width="90dp" android:layout_height="48dp" android:text="Last Name" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
            <TextView android:layout_width="60dp" android:layout_height="48dp" android:text="Class" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
            <TextView android:layout_width="110dp" android:layout_height="48dp" android:text="Subject" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
            <TextView android:layout_width="110dp" android:layout_height="48dp" android:text="Phone Number" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
            <TextView android:layout_width="110dp" android:layout_height="48dp" android:text="ID Number" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
            <TextView android:layout_width="120dp" android:layout_height="48dp" android:text="EMAIL" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
            <TextView android:layout_width="90dp" android:layout_height="48dp" android:text="Password" android:textColor="@color/text_secondary" android:textStyle="bold" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
        </LinearLayout>
    </HorizontalScrollView>
    <!-- Teacher List with Horizontal Scroll -->
    <HorizontalScrollView
        android:id="@+id/scroll_teachers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="horizontal"
        android:visibility="gone"
        android:fillViewport="true">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_teachers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:clipToPadding="false" />
    </HorizontalScrollView>

</LinearLayout>