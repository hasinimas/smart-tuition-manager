<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherResults">

    <ScrollView
        android:background="#E7F8F6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/Cmaterial"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#5BBFAE"
                    android:text="Course Materials"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/assignments"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#6DBAE4"
                    android:text="Assignments"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/results"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#6D7BE4"
                    android:text="Results"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <TextView
                android:text="Results"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#00224B"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Select Subject"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinner_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:layout_marginBottom="16dp" />

            <TextView
                android:text="Remark"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editText_remark"
            android:hint="e.g., Good effort, Needs improvement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

            <TextView
                android:text="Select Student"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinner_students"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:layout_marginBottom="16dp" />

            <TextView
                android:text="Enter Marks"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editText_marks"
                android:hint="e.g., 85"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btn_addresults"
                android:text="Add Results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#B5C5E7"
                android:textColor="#3F51B5" />

            <Button
                android:id="@+id/btn_view"
                android:text="View Results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#027181"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:id="@+id/results_list_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>