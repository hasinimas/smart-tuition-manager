<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/background_white"
    android:showDividers="middle"
    android:divider="@drawable/divider_vertical">

    <TextView android:id="@+id/tv_s_id" android:layout_width="60dp" android:layout_height="48dp" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
    <TextView android:id="@+id/tv_first_name" android:layout_width="90dp" android:layout_height="48dp" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
    <TextView android:id="@+id/tv_last_name" android:layout_width="90dp" android:layout_height="48dp" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
    <TextView android:id="@+id/tv_class" android:layout_width="60dp" android:layout_height="48dp" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
    <TextView android:id="@+id/tv_subjects" android:layout_width="110dp" android:layout_height="48dp" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
    <TextView android:id="@+id/tv_phone" android:layout_width="110dp" android:layout_height="48dp" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
    <TextView android:id="@+id/tv_guardian_tp" android:layout_width="110dp" android:layout_height="48dp" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
    <TextView android:id="@+id/tv_email" android:layout_width="120dp" android:layout_height="48dp" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
    <TextView android:id="@+id/tv_password" android:layout_width="90dp" android:layout_height="48dp" android:textSize="13sp" android:gravity="center" android:singleLine="true" android:ellipsize="end" />
</LinearLayout> 