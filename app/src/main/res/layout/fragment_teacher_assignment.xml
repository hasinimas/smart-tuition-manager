<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E7F8F6">

        <LinearLayout
            android:padding="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">



                <Button
                    android:id="@+id/Cmaterial"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#5BBFAE"
                    android:text="Course Materials"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/assignments"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#6DBAE4"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Assignments"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/results"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#6D7BE4"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Results"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:text="Assignment"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#00224B"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Select Course"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinner_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView
                android:text="Material Title"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editText_title"
                android:hint="e.g., Lecture 1 Notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btn_select_pdf"
                android:text="Select PDF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#B5C5E7"
                android:textColor="#3F51B5"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/text_selected_file"
                android:text="No file selected"
                android:textColor="#6A0404"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_upload"
                android:text="Upload Material"
                android:backgroundTint="#027181"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>
