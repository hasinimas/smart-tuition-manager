<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout_teacher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherCourseGuide">

    <ScrollView
        android:background="#E7F8F6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Cmaterial"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#5BBFAE"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Course Materials"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/assignments"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#6DBAE4"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Assignments"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/results"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#6D7BE4"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Results"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Course Material"
                android:textColor="#00224B"
                android:textSize="25sp"
                android:textStyle="bold" />

            <!-- Select Course -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Course"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/spinner_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#000000" />

            <!-- Material Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Material Title"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editText_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFFFFF"
                android:hint="e.g., Lecture 1 Notes"
                android:textColor="#000000" />

            <!-- Select PDF Button -->
            <Button
                android:id="@+id/btn_select_pdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#B5C5E7"
                android:text="Select PDF"
                android:textColor="#3F51B5" />

            <!-- Selected File Text -->
            <TextView
                android:id="@+id/text_selected_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="No file selected"
                android:textColor="#6A0404" />

            <!-- Upload Button -->
            <Button
                android:id="@+id/btn_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#027181"
                android:text="Upload Material"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
