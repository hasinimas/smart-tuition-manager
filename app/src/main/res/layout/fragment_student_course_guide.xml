<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherCourseGuide">

    <ScrollView
        android:background="#E7F8F6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/Cmaterial"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#5BBFAE"
                    android:text="Course Materials"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/assignments"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#6DBAE4"
                    android:text="Assignments"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/results"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#6D7BE4"
                    android:text="Results"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <!-- Title -->
            <TextView
                android:text="Course Material"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#00224B"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Select Course -->
            <TextView
                android:text="Select Course"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinner_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Material Title -->


            <!-- Container for course materials -->
            <LinearLayout
                android:id="@+id/material_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">
            </LinearLayout>


            <!-- Select PDF Button -->
            <Button
                android:id="@+id/btn_select_pdf"
                android:text="Select PDF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#B5C5E7"
                android:textColor="#3F51B5" />



        </LinearLayout>
    </ScrollView>
</FrameLayout>
