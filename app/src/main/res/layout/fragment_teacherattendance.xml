<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherAttendanceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F5F5F5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Teacher Attendance"
            android:background="@color/primary_one"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/et_student_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Scan/Enter Student ID"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_scan_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan QR Code"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_mark_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark Attendance"
            android:enabled="false" />

        <ListView
            android:id="@+id/lv_attendance_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</FrameLayout>

