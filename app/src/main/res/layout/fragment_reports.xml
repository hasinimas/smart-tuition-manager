<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:paddingBottom="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Loading State -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            style="?android:attr/progressBarStyleLarge" />

        <!-- Empty State -->
        <TextView
            android:id="@+id/tv_empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No data available. Please add students and teachers."
            android:textAlignment="center"
            android:textColor="#757575"
            android:padding="24dp"
            android:visibility="gone"
            android:textSize="16sp" />

        <!-- Section: Overview -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overview"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#212121"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <include layout="@layout/card_stat" android:id="@+id/card_total_students" />
            <include layout="@layout/card_stat" android:id="@+id/card_total_teachers" />
            <include layout="@layout/card_stat" android:id="@+id/card_most_popular_subject" />
        </LinearLayout>

        <!-- Section: Subject Trends -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of teachers per subject"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#212121"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart_teachers"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="8dp" />

        <!-- Header for second chart -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of students per subject"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#212121"
            android:layout_marginTop="8dp" />

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/bar_chart_students"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="16dp" />

        <!-- Section: Grade Distribution -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade Distribution"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#212121"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart_classes"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>